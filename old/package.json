{
  "name": "pokedex",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --watch --runInBand",
    "lint": "eslint . --cache-location node_modules/.cache/eslint",
    "prettier": "prettier \"**/*.+(js|json|scss|html)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "validate": "npm-run-all --parallel check-format lint test build"
  },
  "dependencies": {
    "@reach/listbox": "^0.10.5",
    "history": "^5.0.0",
    "intersection-observer": "^0.11.0",
    "msw": "^0.28.1",
    "node-sass": "^4.14.1",
    "query-string": "^5.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^6.0.0-beta.0",
    "react-scripts": "^4.0.1",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "whatwg-fetch": "^3.6.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": "eslint",
    "**/*.+(js|json|jsx)": "prettier --write"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "license": "MIT",
  "msw": {
    "workerDirectory": "public"
  }
}
